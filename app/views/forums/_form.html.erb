<%= form_for @forum do |f| %>
  <% if @forum.errors.any? %>
    <h2><%= pluralize(@forum.errors.count, "error") %> prevented this post from saving:</h2>
    <ul>
  	  <% @forum.errors.full_messages.each do |msg| %>
  	    <li><%= msg %></li>
  	  <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content%><br>
    <%= f.text_area :content%>
  </div>

  <div class="actions">
    <%= f.submit "Create Post", class: "button button_highlight button_block" %>
  </div>
<% end %>