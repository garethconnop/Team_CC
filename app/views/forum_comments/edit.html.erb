<div id="banner" class="sign_up_banner">
  <div class="wrapper_skinny">
    <h1>Edit Comment</h1>
  </div>
</div>

<div id="form">
  <div class="wrapper_skinny">
    <%= form_for([@forum, @forum_comment]) do |f| %>
		  <div class="field">
		    <%= f.text_area :forum_comment %>
		  </div>
		  <div class="actions">
		    <%= f.submit "Update", class: "button button_highlight button_block" %>
		  </div>
		<% end %>
  </div>
</div>