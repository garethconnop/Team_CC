<%= form_for @video do |f| %>
  <% if @video.errors.any? %>
    <h2><%= pluralize(@video.errors.count, "error") %> prevented this video from saving:</h2>
    <ul>
  	  <% @video.errors.full_messages.each do |msg| %>
  	    <li><%= msg %></li>
  	  <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.label :video_category_id, "Category" %>
  <%= f.collection_select :video_category_id, VideoCategory.all, :id, :name, { prompt: "Choose a Category" } %>

  <%= f.label :image%>
  <%= f.file_field :image%>

  <%= f.label :video_id, 'Video ID'%>
  <%= f.text_field :video_id%>

  <%= f.label :length%>
  <%= f.text_field :length%>

  <%= f.submit %>
<% end %>